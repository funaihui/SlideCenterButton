<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.wizardev.slidecenterbutton.widget.SlideCenterButton
            android:id="@+id/test1"
            android:layout_width="match_parent"
            app:centerSnakeRadius="@dimen/dp30"
            app:centerSnakeBarTextSize="@dimen/sp16"
            app:centerSnakeBarTextColor="@color/text_3a3a3c_color"
            android:layout_margin="@dimen/dp16"
            app:centerSnakeBarTopText="按住"
            app:centerSnakeBarBottomText="滑动"
            app:buttonShadowRadius="@dimen/dp3"
            app:centerButtonType="left"
            app:buttonInitLeftText="右滑中"
            app:buttonInitRightText="右滑做什么"
            app:buttonInnerTextSize="@dimen/sp16"
            app:buttonBackgroundColor="@color/text_3a3a3c_color"
            android:layout_height="wrap_content"/>

    <com.wizardev.slidecenterbutton.widget.SlideCenterButton
            android:id="@+id/test2"
            android:layout_width="match_parent"
            app:centerSnakeRadius="@dimen/dp30"
            app:centerSnakeBarTextSize="@dimen/sp16"
            app:centerSnakeBarTextColor="@color/text_3a3a3c_color"
            android:layout_margin="@dimen/dp16"
            app:centerSnakeBarTopText="按住"
            app:centerSnakeBarBottomText="滑动"
            app:buttonShadowRadius="@dimen/dp0"
            app:centerButtonType="center"
            app:buttonChangeLeftText="右滑中"
            app:buttonChangeRightText="左滑中"
            app:buttonInitLeftText="左滑做什么"
            app:buttonInitRightText="右滑做什么"
            app:buttonInnerTextSize="@dimen/sp16"
            app:buttonBackgroundColor="@color/text_3a3a3c_color"
            android:layout_height="wrap_content"/>
</LinearLayout>